{
  "name": "vue-store",
  "description": "Simple store for Vue.js",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "marcosmoura",
    "email": "marcosvmmoura@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcosmoura/vue-store.git"
  },
  "bugs": {
    "url": "https://github.com/marcosmoura/vue-store/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/vue-store.common.js",
  "module": "dist/vue-store.esm.js",
  "unpkg": "dist/vue-store.js",
  "scripts": {
    "dev": "babel-node build/local",
    "build": "rm -rf dist; babel-node build/lib",
    "lint": "eslint --ext .js,.vue docs src build test",
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "yarn test -- --coverage",
    "postinstall": "babel-node build/git-hooks/install.js",
    "changelog": "babel-node build/generate-changelog.js",
    "release": "sh build/release.sh",
    "github-release": "github-release",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">= 7.0"
  },
  "dependencies": {
    "vue": "^2.4.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "avoriaz": "^3.2.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chalk": "^2.1.0",
    "commitizen": "^2.9.6",
    "concat": "^1.0.3",
    "connect-history-api-fallback": "^1.3.0",
    "conventional-changelog": "^1.1.4",
    "cross-env": "^5.0.4",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "^0.11.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "github-release-cli": "^0.3.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "jest-vue-preprocessor": "^1.1.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^3.0.0",
    "optimize-js": "^1.0.3",
    "optimize-js-plugin": "^0.0.4",
    "ora": "^1.3.0",
    "postcss": "^6.0.8",
    "resolve": "^1.4.0",
    "rollup": "^0.45.2",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-scss": "^0.3.0",
    "rollup-plugin-vue": "^2.4.1",
    "sass-loader": "^6.0.6",
    "shelljs": "^0.7.8",
    "sinon": "^3.0.0",
    "uglify-js": "^3.0.27",
    "url-loader": "^0.5.9",
    "vue-loader": "^13.0.4",
    "vue-router": "^2.7.0",
    "vue-style-loader": "^3.0.1",
    "webpack": "2.6.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.0",
    "zlib": "^1.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^vue$": "<rootDir>/node_modules/vue/dist/vue.common.js",
      "^test(.*)$": "<rootDir>/test$1",
      "^src(.*)$": "<rootDir>/src$1"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest",
      ".*\\.(vue)$": "jest-vue-preprocessor"
    },
    "mapCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/**/index.js",
      "!src/**/*.test.js"
    ],
    "coverageReporters": [
      "lcov",
      "json",
      "html"
    ]
  },
  "browserslist": [
    "> 1%"
  ]
}
